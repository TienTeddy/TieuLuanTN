@using Modal.EF
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Sản Phẩm";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 4);
}
@{
    IEnumerable<LoaiSanPham> lstlsp = ViewBag.maloaisp as IEnumerable<LoaiSanPham>;
}
<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">@ViewBag.Title</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <button type="button" class="btn btn-sm btn-neutral" data-toggle="modal" data-target="#CreateSanPham">Thêm Mới</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="@ViewBag.Alert" style="margin:20px">@ViewBag.notify</div>
                <!-- Light table -->
                <div class="table-responsive">

                    @grid.GetHtml(
                        tableStyle: "table align-items-center table-flush",
                        headerStyle: "thead-light",
                        footerStyle: "btn-group",
                        rowStyle: "",
                        alternatingRowStyle: "gridAltRow",
                        columns: grid.Columns(
                        //grid.Column("id_sanpham", header: "Mã Sản Phẩm"),
                        grid.Column("tensp", header: "Tên Sản Phẩm"),
                        grid.Column("id_loaisp", header: "Loại Sản Phẩm", format: p => p.id_loaisp != null ? p.LoaiSanPham.tenloai : ""),
                        grid.Column("tenngan", header: "Thông Tin"),
                        grid.Column("soluong", header: "Số lượng"),
                        grid.Column("dongia", header: "Đơn Giá"),
                        grid.Column("giasale", header: "Giá Sale"),
                        grid.Column("trangthai", header: "Trạng Thái"),
                        grid.Column("hienthi", header: "Hiển Thị"),
                        grid.Column("thongtin", header: "Thông Tin"),
                        grid.Column("XepLoai", header: "Xếp Loại"),
                        grid.Column("tinhtrang", header: "Tình Trạng"),
                        grid.Column("hinhanh1", header: "Hình Ảnh 1", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh1 + "\">")),
                        grid.Column("hinhanh2", header: "Hình Ảnh 2", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh2 + "\">")),
                        grid.Column("hinhanh3", header: "Hình Ảnh 3", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh3 + "\">")),
                        grid.Column("hinhanh4", header: "Hình Ảnh 4", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh4 + "\">")),
                        grid.Column(format: p => Html.ActionLink("Sửa", "#", new {id=p.id_sanpham }, new { @class = "btn btn-info", onclick = "EditSanPham(" + p.id_sanpham + ")", data_toggle = "modal", data_target = "#EditSanPham" })),
                        grid.Column(format: p => Html.ActionLink("Xoá", "DeleteSanPham", new { id = p.id_sanpham }, new { @class = "btn btn-danger", onclick = "return confirm('Bạn Có Muốn Xoá Sản Phẩm: " + p.tensp + "?')" }))
                    ))

                </div>

                <!-- Card footer -->
                @*<div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
