@using pingping.Models
@model IEnumerable<Account_buyer_Model>
@{
    ViewBag.Title = "Khách Hàng";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">@ViewBag.Title</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <button type="button" class="btn btn-sm btn-neutral" data-toggle="modal" data-target="#myModal1">Thêm Mới</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="@ViewBag.Alert" style="margin:20px">@ViewBag.notify</div>
                <!-- Light table -->
                <div class="table-responsive">

                    @grid.GetHtml(
                        tableStyle: "table align-items-center table-flush",
                        headerStyle: "thead-light",
                        footerStyle: "btn-group",
                        rowStyle: "",
                        alternatingRowStyle: "gridAltRow",
                        columns: grid.Columns(
                        //grid.Column("id_taikhoan", header: "Mã Tài Khoản"),
                        grid.Column("hoten", header: "Họ Tên"),
                        grid.Column("phone", header: "Số Điện Thoại"), 
                        grid.Column("loaitk", header: "Loại TK",format: p=>p.loaitk == true ?"Khách Hàng":"Admin"),
                        grid.Column("email", header: "Email"),
                        grid.Column("street", header: "Đường"),
                        grid.Column("ward", header: "Phường/Xã"),
                        grid.Column("district", header: "Quận/Huyện"),
                        grid.Column("province", header: "Tỉnh/TP"),
                        grid.Column(format: p => Html.ActionLink("Sửa", "#", new {id=p.id_taikhoan }, new { @class = "btn btn-info", onclick = "EditTaiKhoan(" + p.id_taikhoan + ")", data_toggle = "modal", data_target = "#editloaisp" })),
                        grid.Column(format: p => Html.ActionLink("Xoá", "DeleteAccount", new { id = p.id_taikhoan }, new { @class = "btn btn-danger" }))

                    ))

                </div>

                <!-- Card footer -->
                @*<div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>*@
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_Footer")
</div>
<!-- Modal content-->
<div id="editloaisp" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("UpdateLoaiSP", "Manage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Edit Tài Khoản Người mua</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Mã Tài Khoản:</label>
                        </div>
                        <div class="col-6">
                            <input type="text" id="id_taikhoan" name="idloaisp" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Mật Khẩu:</label>
                        </div>
                        <div class="col-6" id="ressetPass">
                            @*@Html.ActionLink("Reset Password", "ResetPassword", new { @class = "btn btn-dark" })*@
                            <a class="btn btn-dark" href="../Manage/Manage/ResetPassword/id">Reset Password</a>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Loại Tài Khoản:</label>
                        </div>

                        <div class="col-6" id="updatePassVip">
                            @*@Html.ActionLink("Nâng cấp", "ResetPassword", new { @class = "btn btn-dark" })*@
                            <a class="btn btn-dark" href="../Manage/Manage/ResetPassword/id">Reset Password</a>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
<div id="myModal1" class="modal fade" role="dialog">
    <div class="modal-dialog">
        @using (Html.BeginForm("CreateBuyer", "Manage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <!-- Modal content-->
            <div class="modal-content" id="loadLoaiSP">
                <div class="modal-header">
                    <h4 class="modal-title">THÊM MỚI KHÁCH HÀNG</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Họ Tên:</label>
                        </div>
                        <div class="col-6">
                            <input type="text" name="hoten" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Tài khoản:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="username" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Mật Khẩu:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>EMAIL:</label>
                        </div>
                        <div class="col-6">
                            <input type="email" name="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>Số điện thoại:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="phone" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>ĐƯỜNG:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="street" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>PHƯỜNG/XÃ:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="ward" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>QUẬN/HUYỆN:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="district" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-5">
                            <label>TỈNH/TP:</label>
                        </div>

                        <div class="col-6">
                            <input type="text" name="province" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success" value="Cập Nhật">
                        <small><button type="button" class="btn btn-danger" data-dismiss="modal">Close</button></small>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    function EditTaiKhoan(id_taikhoan) {
        $.ajax({
            url: "/Manage/Manage/Get_TaiKhoan_id/?tk=" + id_taikhoan,
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                $('#id_taikhoan').val(result.id_taikhoan);
                $('#ressetPass').html('<a class="btn btn-danger" href="../Manage/ResetPassword/' + result.id_taikhoan + '">Reset Password</a>');
                $('#updatePassVip').html('<a class="btn btn-info" href="../Manage/UpdateAdmin/' + result.id_taikhoan + '">Nâng Cấp</a>');
                //alert('<a class="btn btn-dark" href="../ Manage / Manage / ResetPassword / ' + result.id_taikhoan + '">Reset Password</a>');
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>